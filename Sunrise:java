import java.util.*;
class Sun{
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int n,i;
        n=s.nextInt();
        int a[]=new int[n];
        for(i=0;i<n;i++){
            a[i]=s.nextInt();
            
        }
      
        int c=1;
        int s1=a[0];
        for(i=0;i<n;i++){
        if(s1<a[i])
        {
         c++;
}
        }
         System.out.println(c);   
        
    }
}



output:5
6 2 7 4 10
3
